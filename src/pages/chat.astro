---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Fab from "../components/Fab.astro";
import "../styles/global.css";
import "../styles/chat.css";
---

<html lang="es">
  <head>
    <title>FAQ ChatBot | ASESOLECO</title>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta
      name="viewport"
      content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <Navigation />

    <div class="bot">
      <script
        SameSite="None; Secure"
        src="https://cdn.landbot.io/landbot-3/landbot-3.0.0.js"></script>
      <div id="myLandbot" style="width: 100%; height: 800px"></div>
      <script>
        var myLandbot = new Landbot.Container({
          container: "#myLandbot",
          configUrl:
            "https://storage.googleapis.com/landbot.online/v3/H-1789527-GRL1KXOOLT8DOABZ/index.json",
        });
      </script>
    </div>

    <Fab />
    <Footer />
  </body>
</html>
